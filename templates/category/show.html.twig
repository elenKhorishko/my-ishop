{% extends 'base.html.twig' %}

{% block title %}
    Категория товаров
{% endblock %}


{% block body %}
    Category: {{ category.name }} <br>
    Page: {{ page }} <br>

    Продукты: <hr>

    {% for product in category.products %}
        <a href="{{ path('product_show', {'id' : product.id}) }}">
            {{ product.name }} - {{ product.price|number_format(2, ',', ' ') }}
            </a>
        <hr>
    {% endfor %}
{% endblock %}

