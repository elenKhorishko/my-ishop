{% extends 'base.html.twig' %}

{% block title %}
    Категория товаров
{% endblock %}


{% block body %}

    {% for message in app.flashes('notice') %}
        <p>{{ message }}</p>
    {% endfor %}

    Category: {{ category.name }} <br>
    Page: {{ page }} <br>

    <div class="row">
        {% include 'partials/products.html.twig' with {'products': category.products} %}
    </div>

    <a href="{{ path('category_message') }}">Add to cart</a>

{% endblock %}

